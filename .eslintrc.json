{
    "env": {
        "es2021": true,
        "node": true,
        "jest":true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["**/public/*"],
    "rules": {
      "no-param-reassign": ["error", { "props": false }],
      "max-len": ["error", { "code": 200 }],
      "no-underscore-dangle" : ["error", { "allow": ["_id"] }]
      
    }
}
