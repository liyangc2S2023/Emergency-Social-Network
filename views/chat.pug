doctype html
html
    head
        title Chat
        link(rel='stylesheet' href='/css/style.css')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        include lib/semantic.pug
        include lib/axios.pug
        include lib/socketio.pug
        script(src='/javascript/chat.js')
    body
        div#username(hidden)
        div#status(hidden)
        h1 Chat
        div#dialog
        div#inputBox
            input#inputText(type="text")
            input#sendBtn(type="button", value="Send", onclick="sendClick()")